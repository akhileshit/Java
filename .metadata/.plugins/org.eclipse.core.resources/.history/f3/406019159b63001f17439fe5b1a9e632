import java.util.Scanner;

public class AdvanceCalculator implements Calculator {

	Scanner scan = new Scanner(System.in);
	@Override
	public void add() {
		System.out.println("Enter two numbers to Add (+ve INTEGERS ONLY) ");
		int a = scan.nextInt();
		int b = scan.nextInt();
		System.out.println(a + b);
	}

	@Override
	public void sub() {
		System.out.println("Enter two numbers to Subtract (+ve INTEGERS ONLY) ");
		int a = scan.nextInt();
		int b = scan.nextInt();
		System.out.println(a - b);
	}

	@Override
	public void mul() {
		System.out.println("Enter two numbers to Muliply (+ve INTEGERS ONLY) ");
		int a = scan.nextInt();
		int b = scan.nextInt();
		System.out.println(a * b);
	}

	@Override
	public void div() {
		System.out.println("Enter two numbers to Add (+ve INTEGERS ONLY) ");
		int a = scan.nextInt();
		int b = scan.nextInt();
		System.out.println(a / b);
	}

	@Override
	public void mod() {
		System.out.println("Enter two numbers to Add (+ve INTEGERS ONLY) ");
		int a = scan.nextInt();
		int b = scan.nextInt();
		System.out.println(a % b);
	}

}
